<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('message.listing', model: @admins.model_name.human(count: 2)) %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th>#</th>
              <th><%= translate_attribute(@admins, :email) %></th>
              <th>
                <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-plus"></i>
                <% end %>
              </th>
          </tr>
      </thead>
      <tbody>
          <% @admins.each do |admin| %>
          <tr>
              <td><%= admin.id %></td>
              <td><%= admin.email %></td>
              <td style="width: 100px">

                <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: t('message.confirm_with', item: admin.email ) }  do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
          </tr>
          <% end %>
      </tbody>
  </table>

  <div class="text-center">
    <%= paginate @admins %>
  </div>
</div>
